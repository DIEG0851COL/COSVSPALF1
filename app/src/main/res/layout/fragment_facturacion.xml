<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".HomeFragment">

        <!-- Título -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial de Compras"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Lista de compras ficticias -->
        <TextView
            android:id="@+id/textViewPurchase1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compra 1: Vidrio de 10MM - $50.00 USD"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textViewPurchase2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compra 2: Vidrio Laminado - $40.00USD"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewPurchase3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compra 3: Vidrio Templado a 3.000COP"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Otros elementos de la interfaz -->
        <!-- Agrega aquí los elementos adicionales que desees mostrar en la página de historial de compras -->

    </LinearLayout>
</FrameLayout>
